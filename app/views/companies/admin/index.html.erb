 <h1 class="h2">検索</h1>
 <%= render 'search' %>
 <hr>
 <h2>人材一覧</h2>
 <div class="table-responsive">
     <table class="table table-striped table-sm">
     <thead>
      <tr>
            <th><%= sort_link(@q, :updated_at,"情報更新日", default_order: :desc) %></th>
            <th><%= sort_link(@q, :name, default_order: :desc) %></th>
            <th><%= sort_link(@q, :sex,"性別") %></th>
            <th><%= sort_link(@q, :visa,"ビザ") %></th>
            <th><%= sort_link(@q, :Prefecture,"居住地") %></th>
            <th><%= sort_link(@q, :edu_level,"学歴") %></th>
            <th><%= sort_link(@q, :chinese_skill,"中国語スキル") %></th>
            <th><%= sort_link(@q, :jlpt,"JLPT資格") %></th>
            <th colspan="2">操作</th>
          </tr>
     </thead>
     <tbody>
       <% @users.each do |user| %>
         <tr>
           <td><%= user.updated_at.strftime("%Y-%m-%d") %></td>
           <td id="user_name"><%= user.name %></td>
           <td id="user_sex"><%= user.sex %></td>
           <td id="user_visa"><%= Visa.find_by(id:user.visa_id).name %></td>
           <td id="user_prefecture"><%= Prefecture.find_by(id:user.prefecture_id).name %></td>
           <td id="user_edu_level"><%= user.edu_level %></td>
           <td id="user_chinese_skill"><%= user.chinese_skill%></td>
           <td id="user_jlpi"><%= user.jlpt %></td>
           <td><%= link_to "詳細", users_admin_path(id:user) %></td>
           <td><%= link_to 'メッセージ', conversations_path(company_id: current_company.id, user_id: user.id), method: :post,id:"message_userid_#{user.id}" %></td>
         </tr>
       <% end %>
     </tbody>
   </table>
 </div>