<body>
<nav class="navbar navbar-dark sticky-top cflex-md-nowrap p-0">
<!--  <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="#">Company name</a>-->
  <%= link_to("#{@current_company.company_name}さま", companies_admin_index_path,class:"navbar-brand col-sm-3 col-md-2 mr-0") if company_signed_in? %>
  <ul class="navbar-nav px-3">
    <li class="nav-item text-nowrap">
      <%= link_to('ログアウト', destroy_company_session_path, method: :delete,class:"nav-link") if company_signed_in? %>
    </li>
  </ul>
</nav>

<div class="container-fluid">
  <div class="row">
    <nav class="col-md-2 d-none d-md-block bg-light sidebar">
      <div class="sidebar-sticky">
        <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
          <span>メニュー</span>
        </h6>
        <ul class="nav flex-column">
          <li class="nav-item">
            <%= link_to("登録情報の確認・編集", companies_admin_path(current_company.id),class:"nav-link") %>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="#">
              <span data-feather="users"></span>
              メッセージ一覧（※作成中）
            </a>
          </li>
        </ul>

        <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
          <span>その他</span>
        </h6>
        <ul class="nav flex-column mb-2">
          <li class="nav-item">
            <%= link_to("ホーム", companies_admin_index_path,class:"nav-link") if company_signed_in? %>
          </li>
          <li class="nav-item">
            <%= link_to('ログアウト', destroy_company_session_path, method: :delete,class:"nav-link") if company_signed_in? %>
          </li>
        </ul>
      </div>
    </nav>

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
      <h1 class="h2">検索</h1>
      <%= render 'search' %>
      <hr>
      <h2>人材一覧</h2>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
          <tr>
            <th><%= sort_link(@q, :updated_at,"情報更新日", default_order: :desc) %></th>
            <th><%= sort_link(@q, :name, default_order: :desc) %></th>
            <th><%= sort_link(@q, :sex,"性別") %></th>
            <th><%= sort_link(@q, :visa,"ビザ") %></th>
            <th><%= sort_link(@q, :Prefecture,"居住地") %></th>
            <th><%= sort_link(@q, :edu_level,"学歴") %></th>
            <th><%= sort_link(@q, :chinese_skill,"中国語スキル") %></th>
            <th><%= sort_link(@q, :jlpt,"JLPT資格") %></th>
            <th colspan="2">操作</th>
          </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.updated_at.strftime("%Y-%m-%d") %></td>
                <td><%= user.name %></td>
                <td><%= user.sex %></td>
                <td><%= Visa.find_by(id:user.visa_id).name %></td>
                <td><%= Prefecture.find_by(id:user.prefecture_id).name %></td>
                <td><%= user.edu_level %></td>
                <td><%= user.chinese_skill%></td>
                <td><%= user.jlpt %></td>
                <td><%= link_to "詳細", users_admin_path(id:user) %></td>
                <td><%= link_to 'メッセージ', conversations_path(company_id: current_company.id, user_id: user.id), method: :post %>
                </td>
              </tr>
             <% end %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>

















