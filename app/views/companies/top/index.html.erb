<!-- Masthead -->
<header class="masthead">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <div class="container h-100">
    <div class="row h-100 align-items-center justify-content-center text-center">
      <div class="col-lg-10 align-self-end">
        <h1 class="text-uppercase text-white font-weight-bold">中国語人材をみつけよう！</h1>
        <hr class="divider my-4">
      </div>
      <div class="col-lg-8 align-self-baseline">
        <p class="text-white-75 font-weight-light mb-5">中国語求人センターは中国語のできる人材と企業を結ぶスカウトサービスです。</p>
        <%= link_to("いますぐ使ってみる！", new_company_registration_path,class:"btn btn-primary btn-xl js-scroll-trigger") if company_signed_in? %>
        <%= link_to("人材をスカウト！", companies_admin_index_path,class:"btn btn-primary btn-xl js-scroll-trigger") unless company_signed_in? %>
      </div>
    </div>
  </div>
</header>

