<body>
  <div class="container">
    <div class="form-signin">
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h5 class="card-title text-center">ログイン</h5>

      <div class="form-group">
        <%= f.email_field :email,class: "form-control", placeholder: "Email"  %>
      </div>

      <hr>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder: "パスワード" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン",class:"btn btn-lg btn-primary btn-block text-uppercase" %>
      </div>
      <hr class="my-4">
    <% end %>
    <%= render "companies/shared/links" %>
    </div>
  </div>
</body>