<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :company_name %><br />
    <%= f.text_field :company_name, autofocus: true, autocomplete: "company_name" %>
  </div>

  <div class="field">
    <%= f.label :contact_person %><br />
    <%= f.text_field :contact_person, autofocus: true, autocomplete: "contact_person" %>
  </div>

  <div class="field">
    <%= f.label :tel %><br />
    <%= f.text_field :tel, autofocus: true, autocomplete: "tel" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>現在、右記メールアドレスの承認待ちです。: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :current_password %> <br>
    <i>(登録内容を変更するためには、こちらに現在のパスワードを入力してください。)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <p>＜パスワードの変更＞</p>
  <div class="field">
    <%= f.label :password %><br>
    <i>(パスワードを変更する場合は、下記欄に新しいパスワードを入力して下さい)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>


  <div class="actions">
    <%= f.submit "編集する" %>
  </div>
<% end %>

<h3>アカウントの削除</h3>

<p>アカウントを削除しますか？ <%= button_to "アカウントの削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
