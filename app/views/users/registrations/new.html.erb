<body>
<div class="container">
  <div class="form-signin">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <h5 class="card-title text-center">会員登録</h5>
            <div class="form-group">
              <%= f.text_field :name,id:"inputUserame",class: "form-control", placeholder: "名前" %>
            </div>

            <div class="form-group">
              <%= f.date_field :birthday,id:"inputEmail",class:"form-control" %>
            </div>

            <div class="form-group">
                <%= f.collection_radio_buttons(:sex, User.sexes, :first, :first) do |r| %>
                  <div class="form-check form-check-inline">
                  <%= r.label(class:"form-check-label"){ r.radio_button + r.text }  %>
                  </div>
                <% end %>
            </div>

            <div class="form-group">
                <%= f.label :visa %>
                <%= f.collection_select(:visa_id, Visa.all, :id, :name, {prompt: ""},class:"form-control")  %>
            </div>

            <div class="form-group">
                <%= f.label :prefecture_id %>
                <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {prompt: ""},class:"form-control")  %>
            </div>

            <div class="form-group">
              <%= f.label :edu_level  %>
              <%= f.collection_select(:edu_level, User.edu_levels, :first, :first, { include_blank: true }, class:"form-control")  %>
            </div>

            <div class="form-group">
              <%= f.label :jlpt %>
              <%= f.collection_select(:jlpt, User.jlpts, :first, :first, { include_blank: true }, class:"form-control")  %>
            </div>

            <div class="form-group">
              <%= f.label :chinese_skill %>
              <%= f.collection_select(:chinese_skill, User.chinese_skills, :first, :first, { include_blank: true }, class:"form-control")  %>
            </div>

            <div class="form-group">
              <%= f.telephone_field :tel,class: "form-control", placeholder: "TEL"  %>
            </div>

            <div class="form-group">
              <%= f.email_field :email,class: "form-control", placeholder: "Email"  %>
            </div>

            <div class="form-group">
              <%= f.telephone_field :wechat_id ,class: "form-control", placeholder: "Wechat ID"  %>
            </div>

            <div class="form-group">
              <%= f.label :image,class:"form-control-plaintext" %>
              <%= f.file_field :image , class:"form-control-file"%>
            </div>

            <hr>

            <div class="form-group">
              <%= f.label :password %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字最低入力してください)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control"  %>
              </div>
            <%= f.submit "登録",class:"btn btn-lg btn-primary btn-block text-uppercase" %>
            <%#= link_to("ログイン",new_user_session_path,class:"d-block text-center mt-2 small") %>
            <hr class="my-4">

            <%= render "users/shared/links" %>
        <% end %>
    </div>
   </div>
  </div>
</body>
